
<div class="container mx-auto px-4 py-8">

  <div class="mb-6">
    <a href="/contact" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">

      Back to Contact
    </a>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden">


    <div class="p-6">

      <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Complaint Details</h3>
          <div class="space-y-3">
            <div class="flex justify-between border-b border-gray-100 pb-2">
              <span class="text-gray-600 font-medium">User ID:</span>
              <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded"><%= complaint.userId %></span>
            </div>
            <div class="flex justify-between border-b border-gray-100 pb-2">
              <span class="text-gray-600 font-medium">Order ID:</span>
              <span class="font-medium"><%= complaint.orderId %></span>
            </div>
            <div class="flex justify-between border-b border-gray-100 pb-2">
              <span class="text-gray-600 font-medium">Status:</span>
              <span class="font-medium capitalize
                <%= complaint.status === 'pending' ? 'text-yellow-600' : 
                    complaint.status === 'in-progress' ? 'text-blue-600' :
                    complaint.status === 'resolved' ? 'text-green-600' :
                    'text-gray-600' %>">
                <%= complaint.status %>
              </span>
            </div>
            
          </div>
        </div>


      <div class="mb-8">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Your Message</h3>
        <div class="bg-gray-50 rounded-lg p-4 border-l-4 border-blue-500">
          <p class="text-gray-700 whitespace-pre-wrap leading-relaxed"><%= complaint.message %></p>
        </div>
      </div>

      <% if (complaint.adminResponse) { %>
        <div class="mb-8">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Our Response</h3>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 border-l-4 border-blue-500">
            <p class="text-gray-700 whitespace-pre-wrap leading-relaxed"><%= complaint.adminResponse %></p>
          </div>
        </div>
      <% } %>

      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <h3 class="text-sm font-semibold text-gray-800 mb-2">Timeline</h3>
        <div class="text-sm text-gray-600 space-y-1">
          <div class="flex justify-between">
            <span>Created:</span>
            <span><%= complaint.createdAt.toLocaleString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
              second: '2-digit'
            }) %></span>
          </div>
          <div class="flex justify-between">
            <span>Last Modified:</span>
            <span><%= complaint.updatedAt.toLocaleString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
              second: '2-digit'
            }) %></span>
          </div>
        </div>
      </div>

      
    </div>
  </div>
</div>
